{
  "builds": [
    { "src": "app/main.py", "use": "@vercel/python" },
    { "src": "public/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/detect", "dest": "app/main.py" },
    { "src": "/health", "dest": "app/main.py" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
